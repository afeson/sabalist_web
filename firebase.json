{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "!/@(check-images|test-listing-images|test-firestore|firestore-test|app-firebase-test|check-auth).html",
        "destination": "/index.html"
      }
    ]
  }
}







